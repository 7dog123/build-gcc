export AUTOMAKE_ARCHIVE="http://ftp.gnu.org/gnu/automake/automake-${AUTOMAKE_VERSION}.tar.xz"

export GCC_CONFIGURE_OPTIONS="--disable-plugin \
                              --enable-lto \
                              ${GCC_CONFIGURE_OPTIONS}"
