#!/usr/bin/env bash

export GCC_VERSION=6.1.0
export GCC_VERSION_SHORT=6.10
export AUTOCONF_VERSION=2.64
export AUTOMAKE_VERSION=1.11.6

# tarball location
export GCC_ARCHIVE="http://ftpmirror.gnu.org/gcc/gcc-${GCC_VERSION}/gcc-${GCC_VERSION}.tar.bz2"
